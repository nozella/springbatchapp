<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:batch="http://www.springframework.org/schema/batch"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="br.com.nozella.springbatchapp" />

	<!-- stored job-meta in memory -->
	<bean id="transactionManager" class="org.springframework.batch.support.transaction.ResourcelessTransactionManager" />
	<bean id="jobRepository" class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean">
		<property name="transactionManager" ref="transactionManager" />
	</bean>
	<bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
		<property name="jobRepository" ref="jobRepository" />
	</bean>

    <bean id="promotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
        <property name="keys" value="items"/>
    </bean>

    <bean id="decider" class="br.com.nozella.springbatchapp.deciders.CustomDecider" />
    <bean id="customReader" class="br.com.nozella.springbatchapp.readers.CustomReader" />
	<bean id="customProcessor" class="br.com.nozella.springbatchapp.processors.CustomProcessor" />
	<bean id="customWriter" class="br.com.nozella.springbatchapp.writers.CustomWriter" />
    <bean id="customTasklet" class="br.com.nozella.springbatchapp.tasklets.CustomTasklet"/>

	<batch:job id="reportJob" job-repository="jobRepository">
        <batch:decision id="decision" decider="decider">
            <batch:next on="CONTINUE" to="step1"/>
            <batch:next on="ABORT" to="step2"/>
        </batch:decision>

		<batch:step id="step1" next="step2">
			<batch:tasklet>
				<batch:chunk reader="customReader" processor="customProcessor" writer="customWriter" commit-interval="10"/>
			</batch:tasklet>
            <batch:listeners>
                <batch:listener ref="promotionListener"/>
            </batch:listeners>
		</batch:step>

        <batch:step id="step2">
            <batch:tasklet ref="customTasklet" />
        </batch:step>
	</batch:job>
</beans>
